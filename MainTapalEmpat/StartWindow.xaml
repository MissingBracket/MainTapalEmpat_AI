<Window x:Class="MainTapalEmpat.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainTapalEmpat"
        mc:Ignorable="d"
        Title="StartWindow" Height="768" Width="1366" WindowState="Maximized">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="resources/tlo2.jpg"/>
        </Grid.Background>
        <Viewbox>
            <Grid  Height="768" Width="1366">

                <Button Content="Rozpocznij grę" HorizontalAlignment="Left" Margin="450,0,100,100" VerticalAlignment="Bottom" Width="496" Height="40" Background="#FFCF6D29" BorderBrush="#FF5D2D0B" Foreground="White" Grid.ColumnSpan="2" Click="Button_Click_Start"/>
                <Button Content= "Wyjdź" HorizontalAlignment="Left" Margin="450,0,300,40" VerticalAlignment="Bottom" Width="496" Height="40" Background="#FFCF6D29" BorderBrush="#FF5D2D0B" Foreground="White" Grid.ColumnSpan="2" Click="Button_Click_End"/>
                <Image HorizontalAlignment="Left" Height="450" Margin="470,44,0,180" VerticalAlignment="Bottom" Width="496" Source="resources/screen.png"/>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
